{{> nav }}
     


<div id="timeline_grid" class="home_list">
    {{#if movies.length}}
    <ul>
      {{#each movies}}
        <div class="home_item display:flex; flex-direction: column">
          <h2>{{this.movietitle}}</h2>
          <img src="{{this.movieimage}}" alt="{{this.movietitle}}"  style="width: 200px; height: 300px; object-fit: cover;"/>
          <p>{{this.moviedescription}}</p>
          <p><strong>Release Date:</strong> {{this.releasedate}}</p>
          <h3>Comments:</h3>
          <p>friend_1: Great movie!</p>
          <p>friend_2: 10/10!</p>
        </div>
      {{/each}}
    </ul>
  {{else}}
    <p>No movies found.</p>
  {{/if}}

</div>

