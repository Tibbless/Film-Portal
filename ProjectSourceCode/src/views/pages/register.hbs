<div style="background-color: #F6F7EB">
  <div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #F6F7EB; color: #050014;">
    <form action="/register" method="POST" style="width: 300px; padding: 20px; border-radius: 12px; background-color: #F6F7EB;">
      <div class="mb-3">
        <label for="Username" class="form-label">Username</label>
        <input 
          type="text" 
          id="Username" 
          name="Username" 
          class="form-control rounded" 
          style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;" 
          required>
      </div>

      <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input 
          type="email" 
          id="Email" 
          name="Email" 
          class="form-control rounded" 
          style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;" 
          required>
      </div>

      <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input 
          type="password" 
          id="Password" 
          name="Password" 
          class="form-control rounded" 
          style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;" 
          required>
      </div>

      <div class="mb-3">
        <label for="FirstName" class="form-label">First Name</label>
        <input 
          type="text" 
          id="FirstName" 
          name="FirstName" 
          class="form-control rounded" 
          style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;">
      </div>

      <div class="mb-3">
        <label for="LastName" class="form-label">Last Name</label>
        <input 
          type="text" 
          id="LastName" 
          name="LastName" 
          class="form-control rounded" 
          style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;">
      </div>

      <button 
        type="submit" 
        class="btn w-100 rounded mb-3" 
        style="background-color: #7A001B; color: #F6F7EB; border: 1px solid #A30023;">
        Register
      </button>

      {{#if error}}
        <div style="color: red; margin-top: 10px;">{{error}}</div>
      {{/if}}
    </form>
  </div>
</div>
