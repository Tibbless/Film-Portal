{{> header }}

{{> nav }}

<div style="background-color: #F6F7EB;">
  <div class="container d-flex justify-content-center align-items-center min-vh-100" style="color: #050014;">
    <div class="d-flex flex-column align-items-center rounded" style="width: 800px; background-color: #7A001B; color: #F6F7EB; padding: 20px; border: 2px solid #A30023;">
      <!-- Profile Picture and Username -->
      <div class="d-flex flex-column align-items-center mb-4">
        <img src="{{pfp_image}}" 
             class="rounded-circle mb-3" 
             style="width: 150px; height: 150px; border: 3px solid #F6F7EB;">
        <h2>{{userId}}</h2>
      </div>

      <!-- User Details -->
      <div class="d-flex flex-column w-100">
        <div class="mb-3">
          <label class="form-label">First Name:</label>
          <div class="p-2 rounded" style="background-color: #A30023;">{{first_name}}</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Last Name:</label>
          <div class="p-2 rounded" style="background-color: #A30023;">{{last_name}}</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Email:</label>
          <div class="p-2 rounded" style="background-color: #A30023;">{{email}}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  {{ username }}
</div>

{{> footer }}
