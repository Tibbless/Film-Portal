{{> header}}

{{> nav}}

<div class="container mt-5">
  <h1 class="text-center mb-4">Search</h1>

  {{#if error}}
    <div class="alert alert-danger text-center">{{error}}</div>
  {{/if}}

  <form method="POST" action="/search">
    <div class="mb-3">
      <label for="searchType" class="form-label">Search By:</label>
      <select id="searchType" name="searchType" class="form-select" required>
        <option value="" disabled {{#unless searchType}}selected{{/unless}}>Choose a search type</option>
        <option value="byUser" {{#if searchType}}{{#ifCond searchType 'byUser'}}selected{{/ifCond}}{{/if}}>User</option>
        <option value="byMovie" {{#if searchType}}{{#ifCond searchType 'byMovie'}}selected{{/ifCond}}{{/if}}>Movie Title</option>
        <option value="byBody" {{#if searchType}}{{#ifCond searchType 'byBody'}}selected{{/ifCond}}{{/if}}>Review Body</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="query" class="form-label">Search Query:</label>
      <input 
        type="text" 
        id="query" 
        name="query" 
        class="form-control" 
        placeholder="Enter your query" 
        value="{{query}}" 
        required
      >
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>
</div>

{{> footer}}
