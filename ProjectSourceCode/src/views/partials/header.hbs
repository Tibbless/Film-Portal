 <style>
      .home_list{
        display: grid;
        grid-template-columns: repeat(1fr);
        gap: 15px;
        padding: 10px;
      }
      .home_item{
        background-color: #F6F7EB;
        color:#050014;
        padding: 20px;
        text-align: center;
        border: 2px solid #A30023;
        border-radius: 10px;
      }
      .nav_bar {
      position: absolute;  /* Removes it from the normal flow */
      top: 0;              /* Aligns it to the top */
      right: 0; 
      bottom: 0; 
      background-color: #7A001B;
      width: 125px;
      margin: 0;      /* Remove margin */
      padding: 0;     /* Remove padding */
      display: block;
      }
      .nav_text{
        color: white;
        padding: 20px;
      }
      .nav_item{
        border-color: #F6F7EB;
        border-style: solid;
        border-width: 1px;
        padding: 0px;
        width: 100%;
        box-sizing: border-box;
      }
      body{
        background-color: #F6F7EB;
        color: #050014;
      }

    </style>
